!--------------!
! URXVT CONFIG !
!--------------!

URxvt.internalBorder:	30
URxvt.scrollBar:	false
URxvt.letterSpace:	-1
URxvt.cursorColor:	#191919
URxvt.font: xft:Hack:size=10, xft:Font Awesome 5 Free Solid:size=10
!! Larger history limit
urxvt.saveLines: 1000000

!! Perl extensions
urxvt.perl-ext-common: default,matcher,font-size,clipboard
!! Open urls in browser with Control-Click
urxvt.urlLauncher: /usr/bin/firefox
urxvt.matcher.button: C1
!! Change font size on Control-Plus/Minus
URxvt.keysym.Control-0x2b: perl:font-size:increase
URxvt.keysym.Control-0x2d: perl:font-size:decrease
URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.keysym.m-c: perl:clipboard:copy
URxvt.keysym.m-v: perl:clipboard:paste

!-------------!
! ROFI CONFIG !
!-------------!

! state			    background	border      separator
rofi.color-window:	#2d2d2d,	#2d2d2d,	#ffffff	

! state			    bg		    fg		    abg		    hbg		    hfg
#rofi.color-normal:	#2d2d2d,	#6699cc,	#2d2d2d,	#6699cc,	#ffffff
rofi.color-normal:	#2d2d2d,	#cc99cc,	#2d2d2d,	#cc99cc,	#ffffff

! general
rofi.width: 50
rofi.padding: 50
rofi.hide-scroll: true
rofi.borderwidth: 50
rofi.columns: 1
rofi.lines: 4
rofi.separator-style: solid
rofi.font: Terminus 14
rofi.opacity: 60

rofi.color-enabled: true
!rofi.color-window: #f2a2f0, #f2a2f0, #f2a2f0
!rofi.color-normal: #f2a2f0, #f2a2f0, #f2a2f0

